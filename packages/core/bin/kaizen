#!/usr/bin/env php
<?php

require __DIR__ . '/../../../vendor/autoload.php';

use KaizenNexus\Core\Application;
use KaizenNexus\Core\Context\Context;

$options = getopt('', ['data-dir:']);

if (!isset($options['data-dir'])) {
    // fwrite(STDERR, "--data-dir is required\n");
    // exit(1);
    $options['data-dir'] = 'data/downloads/module';
}

$context = new Context($options['data-dir']);
$app = new Application($context);
exit($app->run($argv));
